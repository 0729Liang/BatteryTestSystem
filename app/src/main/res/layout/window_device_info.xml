<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:padding="@dimen/dp10">

    <TextView
        android:id="@+id/mvWindowDeviceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="设备编号:ox-00-01" />

    <TextView
        android:id="@+id/mvWindowDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mvWindowDeviceNumber"
        tools:text="设备名字:？？？？" />

    <TextView
        android:id="@+id/mvWindowDeviceCheckStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mvWindowDeviceName"
        tools:text="是否选中:是" />

    <TextView
        android:id="@+id/mvWindowDeviceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mvWindowDeviceCheckStatus"
        tools:text="设备状态:在线" />

</android.support.constraint.ConstraintLayout>